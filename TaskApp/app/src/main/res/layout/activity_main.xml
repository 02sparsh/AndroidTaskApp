<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/txt"
        android:text="Mx Player App"
        android:textSize="25dp"
        android:textColor="#1556D8"
        android:fontFamily="cursive"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="120dp"
        android:layout_below="@+id/txt"
        android:layout_marginTop="20dp"
        android:id="@+id/but1"
        android:text="About Us"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="120dp"
        android:layout_below="@+id/txt"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/but1"
        android:id="@+id/but2"
        android:text="Music"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="120dp"
        android:layout_below="@+id/txt"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/but2"
        android:id="@+id/but3"
        android:text="Gallery"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/but1"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/linear"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@drawable/landscape1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/landscape2"/>
        </LinearLayout>
    </HorizontalScrollView>



</RelativeLayout>