<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/txt"
        android:text="About Us"
        android:textSize="25dp"
        android:textColor="#1556D8"
        android:gravity="center"
        android:fontFamily="cursive"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@+id/txt"
        android:id="@+id/card1"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:id="@+id/pic1"
            android:background="@drawable/mxceo"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/text2"
        android:layout_below="@id/card1"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Karan Bedi is a graduate of Stanford University in Economics. He is known for his success in transforming a utility video app into India's second-largest OTT in a record eight months of its launch."
        />
    <!--Card 2-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@+id/text2"
        android:id="@+id/card2"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:background="@drawable/vice"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_below="@id/card2"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Viraj Jit Singh is the senior vice president and head of revenue at MX Player."
        />
</RelativeLayout>